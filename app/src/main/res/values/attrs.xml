<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AwesomeTextInputLayout">
        <attr name="borderColor" format="color" />
        <attr name="hintColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="animatedTextSize" format="dimension" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_animation_duration" format="integer|reference" />
        <attr name="shimmer_auto_start" format="boolean|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_mask_width" format="float|reference" />
        <attr name="shimmer_gradient_center_color_width" format="float|reference" />
        <attr name="shimmer_reverse_animation" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="CustomCalendar">
        <attr name="month_year_format" format="enum">
            <enum name="three_letter_month__with_year" value="0" />
            <enum name="full_month__with_year" value="1" />
        </attr>
        <attr name="day_of_week_length" format="integer" />
        <attr name="row_height" format="dimension" />
        <attr name="day_of_week_start_from" format="enum">
            <enum name="sunday" value="0" />
            <enum name="monday" value="1" />
            <enum name="tuesday" value="2" />
            <enum name="wednesday" value="3" />
            <enum name="thursday" value="4" />
            <enum name="friday" value="5" />
            <enum name="saturday" value="6" />
        </attr>
        <attr name="left_button_src" format="reference" />
        <attr name="right_button_src" format="reference" />
    </declare-styleable>
</resources>